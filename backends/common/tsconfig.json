{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "allowImportingTsExtensions": true,
      "noEmit": true
    }
  },
  "include": ["srcs", "scripts"]
}
